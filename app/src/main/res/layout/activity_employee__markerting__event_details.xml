<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Employee_Markerting_EventDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/eventdetailsID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:fontFamily="@font/bungee_inline"
            android:text="Event Details"
            android:textSize="25sp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eventcard1"
            android:elevation="20dp"
            android:layout_margin="20dp"
            android:layout_below="@id/eventdetailsID">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/eventnametextID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/bungee_inline"
                    android:gravity="center_horizontal"
                    android:text="Event"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Name"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/eventnametextID"
                    android:id="@+id/eventnameID"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/eventnameID"
                    android:id="@+id/locationID"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Organizer"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/locationID"
                    android:id="@+id/organizerID"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Twitter Hashtag"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/organizerID"
                    android:id="@+id/twitterID"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Company"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/twitterID"
                    android:id="@+id/companyID"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Responsible User"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/companyID"
                    android:id="@+id/responsibleUserID"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eventcard2"
            android:elevation="20dp"
            android:layout_margin="20dp"
            android:layout_below="@id/eventcard1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Type of Event"
                    android:layout_margin="10dp"
                    android:id="@+id/typeofeventID"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Starting date"
                    android:id="@+id/startdatetextID"
                    android:layout_below="@+id/typeofeventID"
                    android:layout_margin="10dp"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/startdateID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="DD/MM/YYYY"
                    android:inputType="date"
                    android:drawableLeft="@drawable/dob"
                    android:drawablePadding="3dp"
                    android:layout_below="@id/startdatetextID"
                    android:layout_margin="10dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="End Date"
                    android:id="@+id/enddatetextID"
                    android:layout_below="@id/startdateID"
                    android:layout_margin="10dp"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/enddateID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="DD/MM/YYYY"
                    android:inputType="date"
                    android:drawableLeft="@drawable/dob"
                    android:layout_margin="10dp"
                    android:layout_below="@id/enddatetextID"
                    android:drawablePadding="3dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Timezone"
                    android:layout_margin="10dp"
                    android:id="@+id/timezoneID"
                    android:layout_below="@id/enddateID"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eventcard3"
            android:elevation="20dp"
            android:layout_margin="20dp"
            android:layout_below="@id/eventcard2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/registrationstextID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/bungee_inline"
                    android:gravity="center_horizontal"
                    android:text="Registrations"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Minimum Reserved Seats"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/registrationstextID"
                    android:id="@+id/minreservedseatsID"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Maximum Available Seats"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/minreservedseatsID"
                    android:id="@+id/maxavailableseatsID"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Registrations"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/maxavailableseatsID"
                    android:id="@+id/currentregistrationsID"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Number of Partcipants"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/currentregistrationsID"
                    android:id="@+id/noofparticipantsID"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</ScrollView>