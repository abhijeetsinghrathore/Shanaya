<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Employee_Tech_ProjectManager_TaskDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/taskdetailsID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:fontFamily="@font/bungee_inline"
            android:text="Task Details"
            android:textSize="20sp" />

        <android.support.v7.widget.CardView
            android:id="@+id/taskcard1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/taskdetailsID"
            android:layout_margin="20dp"
            android:elevation="20dp"
            app:cardCornerRadius="10dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tasksummarytextviewID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/bungee_inline"
                    android:gravity="center_horizontal"
                    android:text="Task Summary"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tasksummaryID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tasksummarytextviewID"
                    android:layout_margin="10dp"
                    android:text="This is Task Summary"
                    android:textSize="15dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/taskcard2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/taskcard1"
            android:layout_margin="20dp"
            android:elevation="20dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/projectID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Project"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/assignedtoID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/projectID"
                    android:layout_margin="10dp"
                    android:text="Assigned to"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/reviewerID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/assignedtoID"
                    android:layout_margin="10dp"
                    android:text="Reviewer"
                    android:textSize="15dp" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/taskcard3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/taskcard2"
            android:layout_margin="20dp"
            android:elevation="20dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/startdatetextID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Starting date"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/startdateID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/startdatetextID"
                    android:drawableLeft="@drawable/dob"
                    android:drawablePadding="3dp"
                    android:layout_margin="10dp"
                    android:text="DD/MM/YYYY"
                    android:textSize="15dp" />

                <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_alignRight="@+id/startdateID"-->
                <!--android:layout_weight="1"-->
                <!--android:src="@drawable/calendar"-->
                <!--android:id="@+id/startdatecalendarID"-->
                <!--android:padding="5dp"/>-->

                <!--</LinearLayout>-->
                <TextView
                    android:id="@+id/deadlinetextID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/startdateID"
                    android:layout_margin="10dp"
                    android:text="Deadline"
                    android:textSize="15dp" />
                <!--<LinearLayout-->
                <!--android:id="@+id/linear2"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/deadlinetextID"-->
                <!--android:layout_marginBottom="8dp"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:orientation="horizontal">-->

                <TextView
                    android:id="@+id/deadlineID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/deadlinetextID"
                    android:drawableLeft="@drawable/dob"
                    android:drawablePadding="3dp"
                    android:layout_margin="10dp"


                    android:text="DD/MM/YYYY"
                    android:textSize="15dp" />

                <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_alignRight="@+id/deadlineID"-->
                <!--android:layout_weight="1"-->
                <!--android:src="@drawable/calendar"-->
                <!--android:id="@+id/deadlinecalendarID"-->
                <!--android:padding="5dp"/>-->

                <!--</LinearLayout>-->

                <TextView
                    android:id="@+id/tagsID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/deadlineID"
                    android:layout_margin="10dp"
                    android:text="Tags"
                    android:textSize="15dp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/taskcard4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/taskcard3"
            android:layout_margin="20dp"
            android:elevation="20dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/descriptionID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Description"
                android:textSize="15dp" />
        </android.support.v7.widget.CardView>




        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Task Details"-->
        <!--android:gravity="center_horizontal"-->
        <!--android:layout_margin="10dp"-->
        <!--android:textSize="30sp"-->
        <!--android:id="@+id/taskdetailsID"/>-->

        <android.support.v7.widget.CardView
            android:id="@+id/taskdetailscard2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/taskcard4"
            android:layout_margin="20dp"
            android:elevation="20dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/projectstageID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/bungee_inline"
                    android:gravity="center_horizontal"
                    android:text="Task Stage"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/customseekbarprojectmanagerID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/projectstageID"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linearstagesID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/analysisID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="1 : Analysis"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/specificationID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="2 : Specification"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/designID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="3 : Design"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/developmentID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="4 : Development"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/testingID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="5 : Testing"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/doneID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="6 : Done"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

</ScrollView>
